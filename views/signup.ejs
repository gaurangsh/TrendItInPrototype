<html>
  <head>
    <title>Sign Up</title>
    <link rel = "stylesheet" href="signup.css">
  </head>

  <body>
    <div id = "leftSide">
      <a href="/"><button id="homeBtn">Home</button></a>
      <div id="loginImg">
        <img src="loginImg.png" height="100%">
      </div>
      
      <div class = "desc" style="margin-bottom:30px;">
        <h3>Already a member</h3>
        <h3> Click below: </h3>
      </div>

      <a href="/login"><button id="loginBtn">Log In</button></a>
    </div>
    <div id = "rightSide">
      <div class = "desc">
        <h1>E-STORE</h1>
        <p>Welcome to our portal!</p>
        <br>
        <p>Sign Up to get exciting offers</p>
      </div>
      <div id = "errorBox">
        <% if(error) {%>
          <h3><%= error %></h3>
        <% } %>
      </div>
      <form id="infoBox" action="/signup" method="post" enctype = "multipart/form-data">
      
        
        <p style="margin-left:10%; font-size:15px">EMAIL</p>
        <input required id="username" name = "username" placeholder = "Your Username"/>
        <br>
        <br>
        <p style="margin-left:10%; font-size:15px">PASSWORD</p>
        <input required id="password" name = "password" type="password" placeholder = "Your Password"/>
        <br>
        <br>
        <p style="align-self:center;  font-size:15px; ">YOUR IMAGE</p>
        <br>
        <label id="imageBtn" class="desc">
            <input required name="profile_pic" type="file"/>
            <p style = "margin-top:6.5px;">Profile</p> <p>Pic</p>
        </label>
        <input id="signupBtn" type = "submit" value="Register"/>
      
      </form>
    </div>
    
  <body>

  <script>
    var errorBox = document.getElementById("errorBox");
    var arr = errorBox.children;
    if(arr[0]==undefined){
      errorBox.style.display = "none";
    }else{
      var text = arr[0].innerHTML;

      if(text==null||text==""){
        errorBox.style.display = "none";

      }else{
        errorBox.style.display = "block";
      }
    }
  </script>
</html>